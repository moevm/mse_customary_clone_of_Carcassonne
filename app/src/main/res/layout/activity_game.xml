<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity" android:id="@+id/layout1">


    <ImageButton android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:id="@+id/pauseButton"
                 app:srcCompat="@drawable/ic_menu"
                 android:scaleType="fitXY"
                 android:background="@drawable/button_rounded_corners"
                 android:padding="10dp"
                 android:layout_margin="10dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 android:elevation="10dp"
    />



    <carcassonne.se.carcassonnecustomclone.CurrentTile android:layout_width="100dp"
                                                       android:layout_height="100dp"
                                                       android:id="@+id/currentTile"
                                                       app:layout_constraintRight_toRightOf="parent"
                                                       app:layout_constraintBottom_toBottomOf="parent"
                                                       android:layout_margin="10dp"
                                                       app:srcCompat="@drawable/castle1"
                                                       android:elevation="10dp"
    >

    </carcassonne.se.carcassonnecustomclone.CurrentTile>

    <Button android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="68/72"
            android:fontFamily="@font/aclonica"
            android:id="@+id/remainingTiles"
            android:background="@drawable/button_rounded_corners"
            android:layout_margin="10dp"
            app:layout_constraintRight_toLeftOf="@id/currentTile"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="10dp"
    />


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:id="@+id/playerInfoArea"
                  android:orientation="vertical"
                  android:elevation="10dp"
    />


    <ImageButton android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:id="@+id/okButton"
                 app:srcCompat="@drawable/ic_ok"
                 android:scaleType="fitXY"
                 android:background="@drawable/button_rounded_corners_green"
                 android:padding="10dp"
                 android:layout_margin="10dp"
                 app:layout_constraintRight_toRightOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:elevation="10dp"
    />

    <ImageButton android:layout_width="60dp"
                 android:layout_height="50dp"
                 app:srcCompat = "@drawable/ic_close"
                 android:scaleType="fitXY"
                 android:id="@+id/declineButton"
                 android:background="@drawable/button_rounded_corners_red"
                 android:layout_margin="10dp"
                 android:elevation="10dp"
                 app:layout_constraintBottom_toTopOf="@id/okButton"
                 app:layout_constraintRight_toRightOf="parent"
    />


</android.support.constraint.ConstraintLayout>