<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".MainMenuActivity">

    <Button
            android:text="@string/button_play"
            android:background="@color/colorButton"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            app:layout_constraintStart_toStartOf="@+id/rulesButton" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/rulesButton"
    />

    <Button
            android:text="@string/button_rules"
            android:background="@color/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rulesButton"
            app:layout_constraintStart_toStartOf="@+id/exitButton" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/exitButton"
    />

    <Button
            android:text="@string/button_exit"
            android:background="@color/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exitButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="304dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="304dp"
            android:layout_marginBottom="80dp"/>


</android.support.constraint.ConstraintLayout>