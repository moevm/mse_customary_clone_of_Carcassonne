<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlayersActivity">

    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="242dp" app:layout_constraintBaseline_toBaselineOf="@+id/playButton"
            android:layout_marginStart="242dp"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backButton" android:layout_marginBottom="129dp"/>
</android.support.constraint.ConstraintLayout>