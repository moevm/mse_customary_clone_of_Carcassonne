<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="150dp"
                                             android:layout_height="50dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/game_player_info"
>
    <ImageButton android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:id="@+id/playerIcon"
                 android:background="@drawable/circle"
                 app:srcCompat="@drawable/ic_player"
                 android:layout_margin="5dp"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/playerName"
              android:fontFamily="@font/aclonica"
              android:text="test"
              android:textColor="#000"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toRightOf="@id/playerIcon"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="5dp"
    />

    <ImageView android:layout_width="20dp"
               android:layout_height="20dp"
               android:id="@+id/coinIcon"
               app:srcCompat="@drawable/ic_coin"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginEnd="15dp"
               android:layout_marginBottom="5dp"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/coinCounter"
              android:fontFamily="@font/aclonica"
              android:textColor="#000"
              android:text="0"
              app:layout_constraintRight_toLeftOf="@id/coinIcon"
              app:layout_constraintBottom_toBottomOf="@id/coinIcon"
    />

    <ImageView android:layout_width="20dp"
               android:layout_height="20dp"
               android:id="@+id/figurineIcon"
               app:srcCompat="@drawable/ic_figurine"
               android:layout_marginEnd="15dp"
               app:layout_constraintBottom_toBottomOf="@id/coinIcon"
               app:layout_constraintRight_toLeftOf="@+id/coinCounter"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/figurineCounter"
              android:fontFamily="@font/aclonica"
              android:textColor="#000"
              android:text="7"
              app:layout_constraintBottom_toBottomOf="@id/coinIcon"
              app:layout_constraintRight_toLeftOf="@id/figurineIcon"
    />





</android.support.constraint.ConstraintLayout>